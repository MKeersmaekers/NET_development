@{
    var banners = new List<String>
    {
    "bannerRaces.jpg", "bannerRiders.jpg", "bannerTeams.jpg", "bannerTickets.jpg"
    };
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewData["Title"] - MotoGP</title>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        @if ((int)ViewData["BannerNr"] == 0) {
        <a asp-controller="Home" asp-action="Index">
            <img class="hero-image" src="~/images/banners/@banners[0]" /></a>
    } else if ((int)ViewData["BannerNr"] == 1) {
        <a asp-controller="Home" asp-action="Index">
            <img class="hero-image" src="~/images/banners/@banners[1]" /></a>
    } else if ((int)ViewData["BannerNr"] == 2) {
        <a asp-controller="Home" asp-action="Index">
            <img class="hero-image" src="~/images/banners/@banners[2]" /></a>
    } else
    {
        <a asp-controller="Home" asp-action="Index">
            <img class="hero-image" src="~/images/banners/@banners[3]" /></a>
    }

    @if ((int)ViewData["BannerNr"] == 0)
    {
        <h1>@banners[(int)ViewData["BannerNr"]].Substring(6, banners[(int)ViewData["BannerNr"]].Length - 10)</h1>
    } else if ((int)ViewData["BannerNr"] == 1) 
    {
        <h1>Order @banners[(int)ViewData["BannerNr"]].Substring(6, banners[(int)ViewData["BannerNr"]].Length - 10)</h1>
    }
    else if ((int)ViewData["BannerNr"] == 2)
    {
        <h1>Order @banners[(int)ViewData["BannerNr"]].Substring(6, banners[(int)ViewData["BannerNr"]].Length - 10)</h1>
    } else
    {
        <h1>Order @banners[(int)ViewData["BannerNr"]].Substring(6, banners[(int)ViewData["BannerNr"]].Length - 10)</h1>
    }

        <div>
        @RenderBody()
        </div>
    </body>
</html>