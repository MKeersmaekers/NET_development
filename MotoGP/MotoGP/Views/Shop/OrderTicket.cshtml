@model MotoGP.Models.Ticket
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Order tickets";
}


<div>
    Please fill out following fields:
</div>

<form asp-action="ConfirmOrder">
    <input type="hidden" asp-for="CountryID" value="1"/>
    <input type="hidden" asp-for="RaceID" value="1"/>
    <input type="hidden" asp-for="Number" value="1"/>


    <label asp-for="Name">@Html.DisplayNameFor(model => model.Name)</label>
    <input asp-for="Name"/> <br />

    <label asp-for="Email">@Html.DisplayNameFor(model => model.Email)</label>
    <input asp-for="Email" /> <br />

    <label asp-for="Address">@Html.DisplayNameFor(model => model.Address)</label>
    <input asp-for="Address" /> <br />

    <input type="submit" value="Order" />
</form>

<a asp-controller="Home" asp-action="Index">Back</a>